# i3 config file (v4)
# Modern, Clean, Minimal Configuration

# Set modifier key to Super (Windows key)
set $mod Mod4

# Font for window titles and bar
font pango:JetBrains Mono Medium 10

# Modern color palette - Dark theme with subtle accents
set $bg-color            #1a1b26
set $inactive-bg-color   #16161e
set $text-color          #c0caf5
set $inactive-text-color #565f89
set $urgent-bg-color     #f7768e
set $accent-color        #7aa2f7
set $border-color        #3b4261
set $active-border       #7aa2f7
set $warning-color       #ff9e64

# Window colors
#                       border              background         text                 indicator
client.focused          $active-border      $bg-color          $text-color          $accent-color
client.unfocused        $border-color       $inactive-bg-color $inactive-text-color $border-color
client.focused_inactive $border-color       $inactive-bg-color $inactive-text-color $border-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# Window styling
for_window [class=".*"] border pixel 1
gaps inner 10
gaps outer 6
smart_gaps on
smart_borders on
# Autostart applications
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id setxkbmap -layout us -variant altgr-intl
exec --no-startup-id xset r rate 200 30

# Background with blur effect
exec --no-startup-id feh --bg-scale ~/Pictures/1.jpg
exec --no-startup-id picom --config ~/.config/picom/picom.conf

# Volume controls with notification
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Key bindings
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+q kill
bindsym $mod+d exec rofi -show drun
bindsym $mod+Shift+d exec rofi -show run
bindsym $mod+Tab exec rofi -show window

# Screenshots
bindsym Print exec --no-startup-id scrot '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/ && notify-send "Screenshot saved"'
bindsym $mod+Print exec --no-startup-id scrot -u '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/ && notify-send "Window screenshot saved"'
bindsym $mod+Shift+Print exec --no-startup-id scrot -s '%Y-%m-%d-%H%M%S_$wx$h.png' -e 'mv $f ~/Pictures/ && notify-send "Area screenshot saved"'

# Lock screen with blur
bindsym $mod+Shift+x exec i3lock -i ~/Pictures/1.jpg --blur 5

# Background switcher
bindsym $mod+b exec --no-startup-id feh --bg-scale ~/Pictures/1.jpg
bindsym $mod+Shift+b exec --no-startup-id feh --bg-scale ~/Pictures/2.jpg

# Focus movement (vim-like)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split orientation
bindsym $mod+backslash split h
bindsym $mod+minus split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Layout modes
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent/child
bindsym $mod+a focus parent

# Workspace definitions with icons
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload, restart, exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# Resize mode
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Window rules
for_window [class="Pavucontrol"] floating enable, resize set 600 400, move position center
for_window [class="Arandr"] floating enable, resize set 800 600, move position center
for_window [class="Lxappearance"] floating enable, resize set 600 400, move position center
for_window [class="Thunar"] floating enable, resize set 800 600, move position center
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="mpv"] floating enable, resize set 800 600, move position center
for_window [class="feh"] floating enable, resize set 800 600, move position center

# Scratchpad
# bindsym $mod+Shift+minus move scratchpad
# bindsym $mod+minus scratchpad show

# Status bar
bar {
    status_command i3status -c ~/.config/i3status/config
    position top
    height 32
    workspace_buttons yes
    workspace_min_width 50
    separator_symbol "  "
    strip_workspace_numbers yes
    
    colors {
        background $bg-color
        statusline $text-color
        separator $inactive-text-color
        
        #                  border             background         text
        focused_workspace  $accent-color      $accent-color      $bg-color
        inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
        active_workspace   $border-color      $border-color      $text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        binding_mode       $warning-color     $warning-color     $bg-color
    }
}
