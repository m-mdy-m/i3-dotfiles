# i3status configuration file
# Minimal, clean status bar for programmers

general {
    colors = true
    interval = 1
    color_good = "#a3be8c"
    color_bad = "#bf616a"
    color_degraded = "#ebcb8b"
    markup = "pango"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "disk /home"
order += "memory"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = "W: %essid %quality %ip"
    format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

disk "/" {
    format = "/ %avail"
    threshold_type = "percentage_avail"
    low_threshold = 10
}

disk "/home" {
    format = "~ %avail"
    threshold_type = "percentage_avail"
    low_threshold = 10
}

memory {
    format = "RAM %used/%total"
    threshold_degraded = "1G"
    format_degraded = "RAM %used/%total"
}

load {
    format = "Load %1min"
    max_threshold = 4
}

cpu_usage {
    format = "CPU %usage"
    max_threshold = 75
}

cpu_temperature 0 {
    format = "T: %degreesÂ°C"
    max_threshold = 65
    path = "/sys/class/thermal/thermal_zone0/temp"
}

volume master {
    format = "Vol %volume"
    format_muted = "Vol muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery all {
    format = "Bat %status %percentage %remaining"
    format_down = "No battery"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 15
    threshold_type = "percentage"
    hide_seconds = true
    integer_battery_capacity = true
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}
